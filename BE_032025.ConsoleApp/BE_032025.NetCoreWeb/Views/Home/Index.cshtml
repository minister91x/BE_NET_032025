@{
	ViewData["Title"] = "Home Page";
}
@model List<BE_032025.NetCoreWeb.Models.ProductDemoModels>

<div class="text-center">
	<p>Chào mừng bạn đến với trang web BE_032025.NetCoreWeb</p>

   


    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>IMage</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><img src="@item.Image" style="width:100px;height:100px;"></td>
                    </tr>
                }
            }
           
            
        </tbody>
    </table>
	@Html.ActionLink("Lưu lại", "Privacy", "Home", null, new { @class = "btn btn-success" })
</div>
